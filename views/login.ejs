<!doctype html>
<html>
<head>
    <title>AiryDrive</title>
    <script src="javascripts/jquery/jquery-1.8.3.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="https://browserid.org/include.js" type="text/javascript"></script>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="stylesheets/style.css"/>
</head>
<body>
<div class="row">
    <div class="col-xs-4">
        <% if (user) { %>
            <div id="navigation"><a href="/" class="navbar-link">Home</a></div>
        <% } %>
    </div>
    <div class="col-xs-4"><h2 id="title"><span class="glyphicon glyphicon-fire"></span> AiryDrive</h2></div>
    <div class="col-xs-4">
        <% if (user) { %>
            <div id="user"><%= user.email %> &nbsp;<a href="/logout" class="navbar-link">Sign out</a></div>
        <% } %>
    </div>
</div>
<div class="container">

    <div id="main" class="jumbotron text-center">

        <div class="center-block" style="width:400px">

            <p>Login with:</p>

            <form action="/auth/oidc/login">
                <div class="input-group">
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-warning" value="OpenID Connect" />
                    </span>
                    <input name="resource" type="text" class="form-control" placeholder="Enter your email address"/>
                </div>
            </form>

            <form action="/auth/browserid/login" method="post" style="display:none;">
                <input type="text" name="assertion"/>
            </form>
            <a id="browserid" href="#" class="btn btn-info">Mozilla Persona</a>
            <script>
                $("#browserid").click(function(){
                    navigator.id.get(function(assertion) {
                        if (assertion) {
                            $("input").val(assertion);
                            $("form").submit();
                        } else {
                            location.reload();
                        }
                    });
                });
            </script>
            <a href="/auth/google/login" class="btn btn-danger">Google</a>
            <a href="/auth/yahoo/login" class="btn btn-primary">Yahoo</a>
            <a href="/auth/saml/login" class="btn btn-default">SAML2</a>
        </div>
    </div>

    <div class="text-center">
        <p>View on <a href="https://github.com/igi64/airydrive">GitHub</a>.</p>
    </div>

</div>
</body>
</html>